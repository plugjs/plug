{
  "compilerOptions": {
    // Setup our compilation type
    "lib": [ "esnext" ],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": [ "node" ],
    "esModuleInterop": true,

    // No emit (done with "bootstrap")
    "noEmit": true,

    // Ultra strict
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": true,
  }
}
