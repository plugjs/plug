{
  "name": "@plugjs/monorepo",
  "private": true,
  "version": "0.2.0",
  "workspaces": [
    "workspaces/cov8",
    "workspaces/eslint",
    "workspaces/jasmine",
    "workspaces/mocha",
    "workspaces/plug",
    "workspaces/typescript"
  ],
  "scripts": {
    "prepare": "./bootstrap.sh",
    "dev": "ls -1d workspaces/*/src workspaces/*/test | sed 's|^|-w |g' | xargs ./build/cli.mjs dev",
    "build": "./build/cli.mjs",
    "lint": "./build/cli.mjs lint",
    "test": "./build/cli.mjs transpile test",
    "transpile": "./build/cli.mjs transpile",
    "updates": "check-updates package.json workspaces/*/package.json"
  },
  "devDependencies": {
    "@plugjs/eslint-plugin": "^0.1.1",
    "@types/node": "<19",
    "typescript": "^4.9.5"
  }
}
