{
  "compilerOptions": {
    // Setup our compilation type
    "lib": [ "esnext" ],
    "types": [ "node" ],
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "node16",
    // No emit (done with "bootstrap")
    "noEmit": true,
    // Ultra strict
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": [
    "./extra/*.mts",
    "./extra/*.d.ts",
    "build.ts",
    "src/**/*.ts",
    "test/**/*.ts",
  ]
}
