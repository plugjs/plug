{
  "compilerOptions": {
    "lib": [ "esnext" ],
    "types": [ "node" ],
    "target": "esnext",
    "moduleResolution": "node",

    "noEmit": true,

    "strict": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": [
    "bootstrap.ts",
    "src/**/*.ts",
    "test/**/*.ts",
  ]
}
